<h1>Listing create_custom_chores</h1>

<table>
  <tr>
    <th>User</th>
    <th>Text</th>
    <th>Image</th>
  </tr>

<% @chores.each do |chore| %>
  <tr>
    <td><%= chore.user_id  %></td>
    <td><%= chore.chore  %></td>
    <td>  <%= ('<img src="data:image/jpg;base64,%s">' % chore.picture).html_safe %>
    </td>
  </tr>
<% end %>
</table>

