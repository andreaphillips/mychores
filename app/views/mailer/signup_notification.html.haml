%html
  %head
    %title Thank you for signing up to My Chores Beta Program

    :css
      #outlook a{
      	padding:0;
      }
      body{
      	width:100% !important;
      }
      .ReadMsgBody{
      	width:100%;
      }
      .ExternalClass{
      	width:100%;
      }
      body{
      	-webkit-text-size-adjust:none;
      }
      body{
      	margin:0;
      	padding:0;
      }
      img{
      	border:0;
      	height:auto;
      	line-height:100%;
      	outline:none;
      	text-decoration:none;
      }
      table td{
      	border-collapse:collapse;
      }
      #backgroundTable{
      	height:100% !important;
      	margin:0;
      	padding:0;
      	width:100% !important;
      }
      body,#backgroundTable{
      	background-color:#eeeeee;
      }
      #templateContainer{
      	border:1px solid #DDDDDD;
      }
      h1,.h1{
      	color:#202020;
      	display:block;
      	font-family:Arial;
      	font-size:34px;
      	font-weight:bold;
      	line-height:100%;
      	margin-top:0;
      	margin-right:0;
      	margin-bottom:10px;
      	margin-left:0;
      	text-align:left;
      }
      h2,.h2{
      	color:#202020;
      	display:block;
      	font-family:Arial;
      	font-size:30px;
      	font-weight:bold;
      	line-height:100%;
      	margin-top:0;
      	margin-right:0;
      	margin-bottom:10px;
      	margin-left:0;
      	text-align:left;
      }
      h3,.h3{
      	color:#202020;
      	display:block;
      	font-family:Arial;
      	font-size:26px;
      	font-weight:bold;
      	line-height:100%;
      	margin-top:0;
      	margin-right:0;
      	margin-bottom:10px;
      	margin-left:0;
      	text-align:left;
      }
      h4,.h4{
      	color:#202020;
      	display:block;
      	font-family:Arial;
      	font-size:22px;
      	font-weight:bold;
      	line-height:100%;
      	margin-top:0;
      	margin-right:0;
      	margin-bottom:10px;
      	margin-left:0;
      	text-align:left;
      }
      #templatePreheader{
      	background-color:#FAFAFA;
      }
      .preheaderContent div{
      	color:#505050;
      	font-family:Arial;
      	font-size:10px;
      	line-height:100%;
      	text-align:left;
      }
      .preheaderContent div a:link,.preheaderContent div a:visited,.preheaderContent div a .yshortcuts {
      	color:#336699;
      	font-weight:normal;
      	text-decoration:underline;
      }
      #templateHeader{
      	background-color:#ffffff;
      	border-bottom:0;
      	padding:0px;
      }
      .headerContent{
      	color:#202020;
      	font-family:Arial;
      	font-size:34px;
      	font-weight:bold;
      	line-height:100%;
      	padding:0;
      	text-align:center;
      	vertical-align:middle;
      }
      .headerContent a:link,.headerContent a:visited,.headerContent a .yshortcuts {
      	color:#336699;
      	font-weight:normal;
      	text-decoration:underline;
      }
      #headerImage{
      	height:auto;
      	max-width:600px;
      }
      #templateContainer,.bodyContent{
      	background-color:#fafafa;
      }
      .bodyContent div{
      	color:#505050;
      	font-family:Arial;
      	font-size:14px;
      	line-height:150%;
      	text-align:left;
      }
      .bodyContent div a:link,.bodyContent div a:visited,.bodyContent div a .yshortcuts {
      	color:#336699;
      	font-weight:normal;
      	text-decoration:underline;
      }
      .bodyContent img{
      	display:inline;
      	height:auto;
      }
      #templateFooter{
      	background-color:#fafafa;
      	border-top:1px dashed #c5c5c5;
      }
      .footerContent div{
      	color:#707070;
      	font-family:Arial;
      	font-size:12px;
      	line-height:125%;
      	text-align:left;
      }
      .footerContent div a:link,.footerContent div a:visited,.footerContent div a .yshortcuts {
      	color:#336699;
      	font-weight:normal;
      	text-decoration:underline;
      }
      .footerContent img{
      	display:inline;
      }
      #social{
      	background-color:#FAFAFA;
      	border:0;
      }
      #social div{
      	text-align:center;
      }
      #utility{
      	background-color:#FFFFFF;
      	border:0;
      }
      #utility div{
      	text-align:center;
      }
      #monkeyRewards img{
      	max-width:190px;
      }
  %body
    %table#templateContainer{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "margin:0 auto; border: 1px solid #DDDDDD ;background-color: #fafafa;", :width => "600"}
      %tbody
        %tr
          %td{:align => "center", :style => "border-collapse: collapse;", :valign => "top"}
            / // Begin Template Header \\
            %table#templateHeader{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "background-color: #ffffff; border-bottom: 0; padding: 0px;", :width => "600"}
              %tbody
                %tr
                  %td.headerContent{:style => "border-collapse: collapse;color: #202020; font-family: Arial; font-size: 34px; font-weight: bold; line-height: 100%;padding: 0;text-align: center;vertical-align: middle;"}
                    / // Begin Module: Standard Header Image \\
                    %div{:style => "text-align: center;"}
                      %a{:href => "http://mychoresapp.com/", :style => "color: #336699;font-weight: normal;text-decoration: underline;", :target => "new"}
                        %img{:alt => "My Chores App", :border => "0", :height => "200", :src => "http://mychoresapp.com/email/image_01.jpg", :style => "height: 200px;width: 600px;margin: 0;padding: 0;display: block;margin-top: 0;margin-bottom: 0;margin-left: auto;margin-right: auto;border: 0;line-height: 100%;outline: none;text-decoration: none;", :width => "600"}/
                    / // End Module: Standard Header Image \\
            / // End Template Header \\
        %tr
          %td{:align => "center", :style => "border-collapse: collapse;", :valign => "top"}
            / // Begin Template Body \\
            %table#templateBody{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
              %tbody
                %tr
                  %td.bodyContent{:style => "border-collapse: collapse;background-color: #fafafa;", :valign => "top"}
                    / // Begin Module: Standard Postcard Content \\
                    %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
                      %tbody
                        %tr{"mc:hideable" => "hideable_repeat_1_1", "mc:repeatable" => "repeat_1", "mc:repeatindex" => "0", :mchideable => "hideable_repeat_1_1"}
                          %td{:style => "border-collapse: collapse;", :valign => "top"}
                            %table{:border => "0", :cellpadding => "20", :cellspacing => "0", :width => "100%"}
                              %tbody
                                %tr
                                  %td{:style => "border-collapse: collapse;", :valign => "top"}
                                    %div{:style => "color: #505050;font-family: Arial;font-size: 14px;line-height: 150%;text-align: left;"}
                                      %h1.h1{:style => "display: block;margin: 0px 0px 10px;text-align: left;color: #202020;font-family: Arial;font-size: 34px;font-weight: bold;line-height: 100%;margin-top: 0;margin-right: 0;margin-bottom: 10px;margin-left: 0;"}
                                        %strong{:style => "font-family: Arial; font-weight: bold; font-size: 22px; line-height: 22px;"} Welcome to My Chores App, #{@user.first_name}!
                                      %strong
                                        You have successfully signed up to use this app, Please remember your unlock code is
                                        = succeed "." do
                                          %span{:style => "color:#009cff;"} #{@user.pass_code}
                                        = succeed "Remember" do
                                          %br/
                                        you will need this in order to unlock the app when you want to modify any behavior!
                                      %br/
                                      %br/
                                      %strong
                                        If you have any questions, please check out our
                                        %a{:href => "http://mychoresapp.com/beta/index.html#faq"} FAQ Page
                                      %br/
                                      %br/
                                      %strong Thanks for joining us and have a great day!
                    / // End Module: Standard Postcard Content \\
            / // End Template Body \\
        %tr
          %td{:align => "center", :style => "border-collapse: collapse;", :valign => "top"}
            / // Begin Template Footer \\
            %table#templateFooter{:border => "0", :cellpadding => "10", :cellspacing => "0", :style => "background-color: #fafafa;border-top: 1px dashed #c5c5c5;", :width => "600"}
              %tbody
                %tr
                  %td.footerContent{:style => "border-collapse: collapse;", :valign => "top"}
                    / // Begin Module: Standard Footer \\
                    %table{:border => "0", :cellpadding => "10", :cellspacing => "0", :width => "100%"}
                      %tbody
                        %tr
                          %td#social{:colspan => "2", :style => "border-collapse: collapse;background-color: #FAFAFA;border: 0;", :valign => "middle"}
                            %div{:style => "color: #707070;font-family: Arial;font-size: 12px;line-height: 125%;text-align: center;"}
